<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetUserTypeServlet</servlet-name>
        <servlet-class>Servlets.GetUserTypeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserTypeServlet</servlet-name>
        <url-pattern>/getUserType</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsersListServlet</servlet-name>
        <servlet-class>Servlets.UsersListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersListServlet</servlet-name>
        <url-pattern>/UsersList</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadXml</servlet-name>
        <servlet-class>Servlets.UploadXml</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadXml</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
</web-app>